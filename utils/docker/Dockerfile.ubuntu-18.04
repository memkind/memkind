# Pull base image
FROM ubuntu:18.04

LABEL maintainer="katarzyna.wasiuta@intel.com"

# Update the Apt cache and install basic tools
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    autoconf \
    devscripts \
    git \
    libnuma-dev \
    numactl \
    libtool \
    sudo \ 
    whois \
 && rm -rf /var/lib/apt/lists/*

# Add user
ENV USER memkinduser
ENV USERPASS memkindpass
RUN useradd -m $USER -g sudo -p `mkpasswd $USERPASS`
RUN echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Copy scripts responsible for running tests to container
COPY docker_run_build_and_test.sh docker_run_build_and_test.sh
COPY docker_run_coverage.sh /home/$USER/docker_run_coverage.sh

# Allow user to create files in the home and mountpoint directory
RUN chown -R $USER:sudo /mnt
RUN chown -R $USER:sudo /home/$USER

# Change user to $USER
USER $USER

# Set git user name and email to allow automatic merging
RUN git config --global user.email "$USER@intel.com"
RUN git config --global user.name $USER
